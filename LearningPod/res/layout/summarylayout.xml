<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B243B" > 
    
     <LinearLayout android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"> 
         
           <LinearLayout android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">  
         
	          <ImageView 
		         android:layout_width="20dp"
		         android:layout_height="30dp"
		         android:background="@drawable/arrow"
		         android:layout_marginLeft="10dp"
		         android:layout_gravity="center_vertical"/>
	     
    		 <TextView 
		         android:id="@+id/gotomap"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:text = "MAP"
		         android:textColor="#ffffff"
		         android:textSize="24sp"
		         android:textStyle="bold"
		         android:layout_gravity="center_vertical"
		         android:layout_marginLeft="10dp"/>
         
           <TextView
		        android:id = "@+id/summarypodname"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#ffffff"
		        android:textSize="22sp"
		        android:fontFamily="Museo300"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
		        android:layout_marginLeft="230dp"
		        android:text = "Context Clues -  Level A"
	         />
           
           </LinearLayout>
           
           <LinearLayout             
	       		android:layout_width="match_parent"
	     		android:layout_height="match_parent"    
			    android:background="@drawable/bg1"
			    android:weightSum="1"
			    android:orientation="horizontal">
               
               	  <LinearLayout 
				        android:layout_width="0dp"
				       	android:layout_weight="0.35"
				        android:layout_height="wrap_content"  
				        android:orientation="vertical"    
				        android:layout_margin="5dp">
				        
               	      <RelativeLayout 
               	          android:layout_width="wrap_content"
               	          android:layout_height="wrap_content">
               	      
               	      <ImageView 
               	          android:id="@+id/percentageiamge"
               	          android:layout_width="300dp"
               	          android:layout_height="300dp"
               	          android:background="@drawable/aliencorrectpercentage" />
               	      
               	      <TextView
						    android:id="@+id/correctpercentage"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignLeft="@+id/percentageiamge"
						    android:layout_alignTop="@+id/percentageiamge"
						    android:layout_alignRight="@+id/percentageiamge"
						    android:layout_alignBottom="@+id/percentageiamge"						   
						    android:textSize="80sp"
						    android:textStyle="bold"
						    android:gravity="center"
						    android:layout_marginLeft="90dp"
						    android:layout_marginTop="40dp"
						    android:text="57%"
						    android:textColor="#028199" />
               	      
               	      <TextView
						    android:id="@+id/myImageViewText1"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignLeft="@+id/percentageiamge"
						    android:layout_alignTop="@+id/percentageiamge"
						    android:layout_alignRight="@+id/percentageiamge"
						    android:layout_alignBottom="@+id/percentageiamge"						   
						    android:textSize="30sp"
						    android:textStyle="bold"
						    android:gravity="center"
						    android:layout_marginLeft="90dp"
						    android:layout_marginTop="150dp"
						    android:text="Correct"
						    android:textColor="#028199" />
               	      
               	      </RelativeLayout>
               	      
               	      
               	  </LinearLayout>
               	   <LinearLayout 
				        android:layout_width="0dp"
				       	android:layout_weight="0.65"
				        android:layout_height="wrap_content"  
				        android:orientation="vertical"  
				        android:layout_margin="5dp">
				        
               	       <TextView 
               	           android:layout_width="wrap_content"
               	           android:layout_height="wrap_content"
               	           android:text="Click on the question number to review."
               	           android:layout_marginTop="75dp"
               	           android:layout_marginBottom="10dp"
               	           android:textColor="#ffffff"
               	           android:textSize="22sp"/>
               	       
               	       <LinearLayout 
               	           android:id = "@+id/summaryquestioncontainer"
               	           android:layout_width="wrap_content"
               	           android:layout_height="wrap_content"
               	           android:orientation="horizontal" >
               	           
               	            
               
               	       </LinearLayout>
               	           
               	       
               	      
               	  </LinearLayout>
               	  
				        
        
        > 	
               
           </LinearLayout>
        
       
       
     </LinearLayout>
    

</LinearLayout>
